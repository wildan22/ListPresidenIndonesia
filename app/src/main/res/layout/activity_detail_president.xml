<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".DetailPresidentActivity">

        <ImageView
            android:id="@+id/img_presiden"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/soekarno"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_intent_nama_presiden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_presiden"
            android:layout_centerHorizontal="true"
            android:text="NAMA PRESIDEN"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_intent_masa_jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_intent_nama_presiden"
            android:text="MASA JABATAN : 2020 - 2024"/>

        <TextView
            android:id="@+id/txt_judul_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESKRIPSI"
            android:layout_below="@+id/txt_intent_masa_jabatan"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <WebView
            android:id="@+id/txt_deskripsi_presiden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_judul_deskripsi"
            android:layout_marginTop="21dp"
            android:text="LOREM IPSUM SIR DOLOR AMET"
            android:textSize="12sp" />

    </RelativeLayout>
</ScrollView>